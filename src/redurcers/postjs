const initialState = {
  posts: [],
  selectedPost: null
};

const postReducer = (state = initialState, action) => {
  switch (action.type) {
    case 'FETCH_POSTS':
      return {
        ...state,
        posts: action.payload
      };
    case 'SELECT_POST':
      return {
        ...state,
        selectedPost: action.payload
      };
    default:
      return state;
  }
};

export default postReducer;
